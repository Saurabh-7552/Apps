<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background=" ?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/wordImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_image"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deutsch"
            style="@style/GermanTextStyle"
            android:gravity="bottom"
            android:textStyle="bold"
            tools:ignore="NestedWeights,RtlSymmetry"
            tools:text="@string/german" />

        <TextView
            android:id="@+id/englisch"
            style="@style/GermanTextStyle"
            tools:ignore="RtlSymmetry"
            tools:text="@string/english" />
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_play_arrow_black_24dp"
        tools:ignore="ContentDescription" />
   </LinearLayout>

</LinearLayout>
