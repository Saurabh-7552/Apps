<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.german">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.german.IntroActivity"
            android:label="Introductions"
            android:parentActivityName="com.example.german.MainActivity"/>
        <activity android:name="com.example.german.DayActivity"
            android:label="Days"
            android:parentActivityName="com.example.german.MainActivity"/>
        <activity
            android:name="com.example.german.PhrasesActivity"
            android:label="@string/category_phrases"
            android:parentActivityName="com.example.german.MainActivity" />
        <activity
            android:name="com.example.german.ColorsActivity"
            android:label="@string/category_colors"
            android:parentActivityName="com.example.german.MainActivity" />
        <activity
            android:name="com.example.german.FamilyActivity"
            android:label="@string/category_family"
            android:parentActivityName="com.example.german.MainActivity" />
        <activity
            android:name="com.example.german.NumbersActivity"
            android:label="@string/category_numbers"
            android:parentActivityName="com.example.german.MainActivity" />
        <activity android:name="com.example.german.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>