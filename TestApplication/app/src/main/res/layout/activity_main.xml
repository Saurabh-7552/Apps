<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/download">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="sans-serif-light"
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Saurabh Schools"
            android:textColor="#ffffff"
            android:textSize="50sp" />
        <TextView
            android:fontFamily="sans-serif-light"
            android:id="@+id/kv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. KV2 Chakeri"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:paddingBottom="4dp"
            android:layout_toRightOf="@id/name"/>
        <TextView
            android:fontFamily="sans-serif-light"
            android:id="@+id/kv1"
            android:layout_below="@id/kv2"
            android:layout_toRightOf="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. KV1 Kalaikunda"
            android:paddingBottom="4dp"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        <TextView
            android:fontFamily="sans-serif-light"
            android:id="@+id/kv3"
            android:layout_below="@id/kv1"
            android:layout_toRightOf="@id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="3. KV1 Kanpur"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </RelativeLayout>
    <Button
        android:fontFamily="sans-serif-light"
        android:onClick="MapAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:background="@color/colorAccent"
        android:text="From Saurabh"
        android:textSize="34sp"/>


</RelativeLayout>